<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.scenes.CardOverviewCtrl"
            stylesheets="@./css/CardOverview.css"
            fx:id="cardOverview"
            prefWidth="300"
            prefHeight="100">
    <!-- TODO we can probably remove the prefWidth and prefHeight -->
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0"
          styleClass="vbox">
        <HBox maxWidth="Infinity" styleClass="hbox">
            <TextField fx:id="title" HBox.hgrow="ALWAYS" onAction="#saveTitle"/>
            <!-- TODO replace the "X" with a proper image -->
            <Button fx:id="deleteButton" onAction="#delete">X</Button>
        </HBox>
        <!-- TODO perhaps add a description indicator somewhere around here -->
        <HBox maxWidth="Infinity" styleClass="hbox">
            <ProgressBar HBox.hgrow="ALWAYS" fx:id="subtaskProgress" maxWidth="Infinity"/>
            <!-- TODO fix the alignment of this label - it appears too low, compared to the
                  progress bar
             -->
            <Label HBox.hgrow="NEVER" fx:id="subtaskLabel"/>
        </HBox>
        <FlowPane fx:id="tagsContainer" styleClass="flow-pane"/>
    </VBox>
</AnchorPane>